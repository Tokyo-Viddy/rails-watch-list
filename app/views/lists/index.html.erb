<div class="grid-container">
  <div class="grid-header index-banner banner-background">
    <div class="text-center p-5 mb-3 text-white">
      <h1 >Viddy's movie database</h1>
    </div>
  </div>
  <div class="grid-navbar text-center">
    <%= link_to "New List", new_list_path, class: "btn btn-primary m-2" %>
  </div>
  <% counter = 1 %>
  <% @lists.each do |list| %>
    <div class=<% if counter % 3 == 0 %>
        <% counter = 1 %>
        <%= "main-3" %>
      <% elsif counter % 2 == 0 %>
        <% counter += 1 %>
        <%= "main-2" %>
      <% else %>
        <% counter += 1 %>
        <%= "main-1" %>
      <% end %>>
      <div class="card-product">
        <%= list.photo.attached? ? cl_image_tag(list.photo.key, height: 300, crop: :fill) : image_tag('https://picsum.photos/200', height: 300, crop: :fill) %>
        <div class="card-product-infos">
          <h2><%= list.name %></h2>
        </div>
        <%= link_to '', list_path(list), class: 'card-link'  %>
      </div>
    </div>
  <% end %>
  <div class="right-space">
  </div>
  <div class="grid-footer index-banner footer-background">
    <div class="text-center p-5">
      <h3 class="text-center mt-4">Made possible with help from Le Wagon Tokyo</h3>
    </div>
  </div>
</div>
