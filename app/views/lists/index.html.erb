<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "Create a new list", new_list_path, class: "btn btn-primary m-2" %>
</div>
<div class="index-banner banner-background">
  <div class="text-center p-5 mb-3">
    <h1 >Welcome to Viddy's movie database</h1>
  </div>
</div>
<div class="container">
  <div class="grid-container">
    <% @lists.each do |list| %>
      <div class="card-product">
        <%= list.photo.attached? ? cl_image_tag(list.photo.key, height: 200, crop: :fill) : image_tag('https://pixy.org/src/21/219269.jpg', height: 200) %>
        <div class="card-product-infos">
          <h2><%= list.name %></h2>
        </div>
        <%= link_to '', list_path(list), class: 'card-link'  %>
      </div>
    <% end %>
  </div>
</div>
