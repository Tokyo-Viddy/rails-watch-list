<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li><%= link_to 'Add a new movie', new_list_bookmark_path(@list), class:'btn btn-primary m-2' %></li>
      <li><%= link_to 'Back to list index', lists_path, class: 'btn btn-secondary m-2' %></li>
    </ul>
  </div>
</div>

<div class="container">
    <div class="card-category mt-3 mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.photo.attached? ? cl_image_path(@list.photo.key, height: 200, crop: :fill) : image_path('https://pixy.org/src/21/219269.jpg', height: 200) %>')">
    <h1><%= @list.name %></h1>
  </div>
  <div class="grid-container">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card card-background-colour text-white" style="width: 18rem;">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item card-background-colour">Movie rating: <%= bookmark.movie.rating %></li>
          <li class="list-group-item card-background-colour"><%= bookmark.comment %></li>
          <li class="list-group-item card-background-colour"><%= link_to 'Remove movie from this list', bookmark_path(bookmark), method: :delete, data: {confirm: "Remove movie?"} %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="index-banner banner-background">
  <div class="text-center p-3 mt-5">
    <h5>Made possible with help from Le Wagon</h5>
  </div>
</div>
