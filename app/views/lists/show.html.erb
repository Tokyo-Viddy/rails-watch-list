<div class="container">
    <div class="card-category mt-3 mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.photo.attached? ? cl_image_path(@list.photo.key, height: 200, crop: :fill) : image_path('https://pixy.org/src/21/219269.jpg', height: 200) %>')">
    <h1><%= @list.name %></h1>
  </div>
  <ol>
    <% @list.bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %> - <%= bookmark.comment %> - <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: {confirm: "Remove movie?"} %></li>
    <% end %>
  </ol>
  <%= link_to 'Add a new movie', new_list_bookmark_path(@list), class:'btn btn-primary mt-2' %>
  <%= link_to 'Back to list index', lists_path, class: 'btn btn-secondary mt-2' %>
</div>
